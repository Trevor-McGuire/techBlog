<div class="container m-5 c1">
  <a href="project/{{id}}">
    <div class="w-100 p-3">
      <span>{{name}}</span>
      <span>Posted by {{user.name}} on {{format_date date_created}}</span>
    </div>
    <div class="p-3 c2">
      {{description}}
    </div>
  </a>
</div>

{{#each comments}}
<div class="container m-5 c1">
  <div class="w-100 p-3">
    <span>{{text}}</span>
    <span>Posted by {{user.name}} on {{format_date date_created}}</span>
  </div>
  <div class="p-3 c2">
    {{description}}
  </div>
</div>
{{/each}}

<div class="container m-5">
  <div class="login-card">
    <form class="form signup-form">
      <div class="form-group">
        <label for="post-description">Comment:</label>
        <textarea class="form-input" id="post-comment" /></textarea>
      </div>
      <div class="form-group">
        <button id="new-post" class="btn btn-primary" type="submit">Submit Comment</button>
      </div>
    </form>
  </div>
</div>